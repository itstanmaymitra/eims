<section class="login">
	<div class="login__box">
		<div class="login__box--icon">
			<span>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					height="24px"
					viewBox="0 0 24 24"
					width="24px"
					fill="#000000"
				>
					<path d="M0 0h24v24H0z" fill="none" />
					<path
						d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"
					/>
				</svg>
			</span>
		</div>

		<form action="/login" method="POST" class="login__box--form">
			<input
				placeholder="Your Email..."
				name="email"
				type="email"
				class="login__box--input input-text"
				autocomplete="off"
			/>
			<input
				placeholder="Password"
				name="password"
				type="password"
				class="login__box--input input-text"
			/>
			<button class="login__box--button submit-btn" type="submit">
				Login
			</button>
		</form>

		<a href="#" class="login__box--link">Forgot Password</a>
	</div>
</section>

